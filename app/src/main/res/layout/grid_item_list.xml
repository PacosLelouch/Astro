<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp" android:layout_height="95dp">

    <ImageView
        android:background="@drawable/selector"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/home"
        android:id="@+id/HomePic"
        android:layout_centerInParent="true"
        android:layout_below="@+id/HomeID"
        android:layout_alignLeft="@+id/HomeID"
        android:layout_alignStart="@+id/HomeID" />

    <TextView
        android:text="HomeName"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:id="@+id/HomeName"
        android:background="@drawable/selector"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/HomeID"
        android:layout_toEndOf="@+id/HomeID" />

    <TextView
        android:text="HomePeople"
        android:layout_height="60dp"
        android:id="@+id/HomePeople"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@drawable/selector2"
        android:layout_below="@+id/HomeID"
        android:layout_toRightOf="@+id/HomePic"
        android:layout_toEndOf="@+id/HomePic"
        android:layout_width="100dp" />

    <TextView
        android:text="HomeID"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:background="@drawable/selector2"
        android:id="@+id/HomeID"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>