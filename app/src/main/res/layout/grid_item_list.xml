<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp" android:layout_height="95dp">

    <ImageView
        android:background="@drawable/selector"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/home"
        android:id="@+id/roomPic"
        android:layout_centerInParent="true"
        android:layout_below="@+id/roomState"
        android:layout_alignLeft="@+id/roomState"
        android:layout_alignStart="@+id/roomState" />

    <TextView
        android:text="romeName"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/roomName"
        android:background="@drawable/selector"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/roomState"
        android:layout_toEndOf="@+id/roomState" />

    <TextView
        android:text="romePeople"
        android:layout_height="60dp"
        android:id="@+id/roomPeople"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@drawable/selector2"
        android:layout_below="@+id/roomState"
        android:layout_toRightOf="@+id/roomPic"
        android:layout_toEndOf="@+id/roomPic"
        android:layout_width="100dp" />

    <TextView
        android:text="romeState"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@drawable/selector2"
        android:id="@+id/roomState"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>